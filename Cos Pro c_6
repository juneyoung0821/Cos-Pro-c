/*
#include <stdio.h>

int main(void)
{
    int total = 0; // 총합을 저장할 변수
    int i, num; // 반복을 제어할 변수와 사용자로부터 입력 받은 값

    printf("0부터 num까지의 덧셈 num은? : ");
    scanf("%d", &num); // 사용자로부터 num 값을 입력 받습니다.

    for (i = 0; i < num + 1; i++) // 0부터 num까지 반복합니다.
    {
        total += i; // total에 i를 더합니다.
        printf("0부터 %d까지 덧셈 결과 : %d\n", i, total); // 현재까지의 덧셈 결과를 출력합니다.
    } // for 루프 종료

    return 0;
}

*/

/*
		#include <stdio.h>

int main(void)
{
    double total = 0.0; // 입력된 숫자들의 총합을 저장할 변수
    double input = 0.0; // 사용자로부터 입력받은 숫자를 저장할 변수
    int num = 0; // 입력된 숫자의 개수를 저장할 변수

    // 루프를 통해 사용자로부터 숫자를 입력받고, 입력이 음수가 될 때까지 더합니다.
    for (; input >= 0.0; )
    {
        total += input; // 입력된 숫자를 총합에 더합니다.
        printf("실수 입력(minus to quit) : ");
        scanf("%lf", &input); // 사용자로부터 숫자를 입력받습니다.
        num++; // 입력된 숫자의 개수를 증가시킵니다.
    }

    printf("\n");
    printf("total sum = %.2lf \n\n", total); // 총합을 출력합니다.
    printf("평균 : %.2f \n", total / (num - 1)); // 평균을 출력합니다.
    
    return 0;
}

*/
