#include <stdio.h>

int main(void)
{
    int cur, is;

    // 구구단을 출력하는 이중 루프
    for (cur = 2; cur < 10; cur++) // 구구단의 단(cur)을 2부터 9까지 반복
    {
        for (is = 1; is < 10; is++) // 각 단(cur)에서 1부터 9까지 곱하는 값을 출력
        {
            printf("%d X %d = %d \n", cur, is, cur * is);
        }
        printf("\n"); // 한 단(cur)이 끝나면 줄바꿈
    }
    
    return 0;
}

	
