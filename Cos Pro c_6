/*
#include <stdio.h>

int main(void)
{
    int dan = 0; // 구구단의 단을 나타내는 변수
    int num = 1; // 각 단에서 곱해지는 숫자를 나타내는 변수

    printf("몇 단? : ");
    scanf("%d", &dan); // 사용자로부터 단 수를 입력받습니다.

    do {
        // 현재 단(dan)과 곱할 숫자(num)를 곱하여 결과를 출력합니다.
        printf("%d X %d = %d \n", dan, num, dan * num);

        num++; // 곱할 숫자(num)를 1 증가시킵니다.
    } while (num < 10); // num이 10보다 작은 동안 반복합니다.

    return 0;
}

