    printf("몇 단? : ");
    scanf("%d", &dan); // 사용자로부터 단 수를 입력받습니다.

    while (num < 10) // num이 10보다 작은 동안 반복합니다.
    {
        printf("%d X %d = %d \n", dan, num, dan * num); // 단(dan)과 곱할 숫자(num)를 출력합니다.
        num++; // num 값을 1씩 증가시킵니다.
    } // while 루프 종료

