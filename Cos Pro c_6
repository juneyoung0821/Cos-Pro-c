/*
#include <stdio.h>

int main(void)
{
    int num; // 반복을 제어할 변수

    // for 루프를 사용하여 3번 반복하며 "Hi for"를 출력합니다.
    for (num = 0; num < 3; num++)
    {
        printf("Hi for \n");
    }

    num = 0; // num 값을 다시 0으로 초기화합니다.

    // while 루프를 사용하여 3번 반복하며 "Hi while"를 출력합니다.
    while (num < 3)
    {
        printf("Hi while \n");
        num++; // num 값을 1씩 증가시킵니다.
    }

    return 0;
}

