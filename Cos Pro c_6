/*
#include <stdio.h>

int main(void)
{
    int cur = 2; // 단(cur)의 초기값을 2로 설정합니다.
    int is = 0; // 곱할 숫자(is)의 초기값을 0으로 설정합니다.

    while (cur < 10) // 단(cur)이 10보다 작은 동안 반복합니다.
    {
        is = 1; // 곱할 숫자(is)의 값을 1로 초기화합니다.

        while (is < 10) // 곱할 숫자(is)가 10보다 작은 동안 반복합니다.
        {
            printf("%d X %d = %d\n", cur, is, cur * is); // 현재 단(cur)과 곱할 숫자(is)를 곱하여 결과를 출력합니다.
            is++; // 곱할 숫자(is)를 1 증가시킵니다.
        } // 내부 while 루프 종료

        cur++; // 다음 단(cur)으로 이동합니다.
    } // 외부 while 루프 종료

    return 0;
}

